@model ProductReviewOverviewModel
@using System.Globalization
@{
    var ratingPercent = 0;
    if (Model.TotalReviews != 0)
    {
        ratingPercent = ((Model.RatingSum * 100) / Model.TotalReviews) / 5;
    }
}
@if (Model.AllowCustomerReviews)
{
    <div class="product-rate">
        <div class="product-rating" style="width:@(ratingPercent)%"></div>
    </div>
    @if (Model.TotalReviews > 0)
    {
        <span class="number-rate silver">(@Model.TotalReviews)</span>
        <div class="product-review-links">
           <span class="separator">|</span> <a href="@Url.RouteUrl("ProductReviews", new { productId = Model.ProductId })">@T("Reviews.Overview.AddNew")</a>
        </div>

    }
    else
    {
        <a class="add-review" href="@Url.RouteUrl("ProductReviews", new { productId = Model.ProductId })">@T("Reviews.Overview.First")</a>
    }


}