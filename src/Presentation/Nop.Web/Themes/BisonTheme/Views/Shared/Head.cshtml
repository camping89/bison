@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    var themeName = themeContext.WorkingThemeName;
    var isIe8 = userAgentHelper.IsIe8();

    //add browser specific CSS files
    if (isIe8)
    {
        Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/ie8.css");
    }
    //add main CSS file
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/customstyle.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/browser.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/responsive.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/theme.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/color.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/hover.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/animate.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/slick.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/flipclock.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/owl.theme.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/owl.transitions.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/owl.carousel.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/jquery-ui.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/jquery.fancybox.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/bootstrap-theme.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/bootstrap.min.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/font-awesome.min.css");

    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/ajaxfilter.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/libs/jcarousel.connected-carousels.css");
    //add browser specific JS files
    if (isIe8)
    {
        Html.AddScriptParts(ResourceLocation.Footer, "~/lib/selectivizr.min.js");
        Html.AddScriptParts(ResourceLocation.Footer, "~/lib/respond.min.js");
    }

    //add template javascripts
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/bootstrap.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery-ui.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery.fancybox.js");

    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery.jcarousel.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery.jcarousel-swipe.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jcarousel.connected-carousels.js");

    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/owl.carousel.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery.jcarousellite.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery.elevatezoom.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery.mousewheel.min.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery.mCustomScrollbar.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/jquery.bxslider.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/slick.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/popup.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/flipclock.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/libs/wow.js");
    Html.AddScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/theme.js");
}