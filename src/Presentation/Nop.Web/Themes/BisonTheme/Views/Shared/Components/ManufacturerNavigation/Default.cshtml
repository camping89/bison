@model ManufacturerNavigationModel
@if (Model.Manufacturers.Count > 0)
{
    <div class="filter-manufacture filter">
        <h3 class="title14">@T("Manufacturers")</h3>
        <ul>

            @foreach (var manufacturer in Model.Manufacturers)
            {
                <li class="checkbox">
                    <input data-type="manufacturer_chk" id="manufacturer_chk_@manufacturer.Id" class="ManuCheckbox checkbox" name="manufacturer_chk_@manufacturer.Id" value="@manufacturer.Id" type="checkbox" />
                    <label for="manufacturer_chk_@manufacturer.Id"><span>@manufacturer.Name</span></label>
                </li>
            }
        </ul>

