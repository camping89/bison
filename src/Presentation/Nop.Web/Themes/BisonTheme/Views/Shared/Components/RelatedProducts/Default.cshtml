@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="upsell-product">
        <h2 class="title30">@T("Products.RelatedProducts")</h2>
        <div class="product-slider">
            <div class="wrap-item group-navi" data-navigation="true" data-pagination="false" data-itemscustom="[[0,1],[480,2],[768,3],[990,4]]">
                @foreach (var item in Model)
                {
                    <div class="item-box">@await Html.PartialAsync("_ProductBox", item)</div>
                }
            </div>
        </div>
    </div>
}