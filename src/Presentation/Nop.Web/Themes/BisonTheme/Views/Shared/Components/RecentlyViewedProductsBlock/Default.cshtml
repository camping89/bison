@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="widget widget-compare">
        <h2 class="title-widget title18">@T("Products.RecentlyViewedProducts")</h2>
        <ul class="list-none">
            @for (var i = 0; i < Model.Count; i++)
            {
                var product = Model[i];
                <li @(i == Model.Count - 1 ? @Html.Raw(" class=\"last\"") : null)>
                    <div class="item-product-recent table">
                        <div class="product-thumb">
                            @if (!string.IsNullOrEmpty(product.DefaultPictureModel.ImageUrl))
                            {
                                <a class="product-thumb-link" href="@Url.RouteUrl("Product", new { SeName = product.SeName })" title="@product.DefaultPictureModel.Title">
                                    <img alt="@product.DefaultPictureModel.AlternateText" src="@product.DefaultPictureModel.ImageUrl" title="@product.DefaultPictureModel.Title" />
                                </a>
                            }
                        </div>
                        <div class="product-info">
                            <h3><a href="@Url.RouteUrl("Product", new { SeName = product.SeName })">@product.Name</a></h3>
                            <div class="product-price">
                                @if (!string.IsNullOrEmpty(product.ProductPrice.OldPrice))
                                {
                                    <del><span class="title14 silver">@product.ProductPrice.Price</span></del>
                                }
                                <ins><span class="title14 color">@product.ProductPrice.Price</span></ins>

                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
}